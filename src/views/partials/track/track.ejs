<div
  class="track-container bordered-container"
  id="track-spotify-<%= track.spotifyId %>"
>
  <!-- prettier-ignore -->
  <%- include('album-image', { 
      imageUrl: track.imageUrl, 
      trackName: track.name, 
      artistName: track.artists.map(artist => artist.name).join(', ')
    }); %>
  <div class="track-information marquee-container">
    <div class="track-title marquee-text"><%= track.name %></div>
    <div class="track-artist marquee-text">
      <%= track.artists.map(artist => artist.name).join(', ') %>
    </div>
  </div>
  <div
    class="track-button-play clickable"
    hx-trigger="click"
    hx-put="/api/music/play-tracks"
    hx-vals='{"trackIds": [<%= trackIds.join(',') %>], "offset": <%= track.index %>}'
    hx-swap="outerHTML"
    hx-target="#snackbar-container"
    >
    <i class="fa-solid fa-play"></i>
    <i class="fa-brands fa-spotify"></i>
  </div>
  <img
    class="is-playing-image track-image"
    src="<%= track.image.src %>"
    alt="<%= track.image.alt %>"
    style="display: none"
  />
</div>
